    body#managebody 
        h1.TituloManage Esta es la vista del administrador para gestionar y ver peliculas
        div#resultcreate
            article.filmsa1 
            each value, index in listMovies
                div(class="listMovies1", id=`${listMovies[index].title}`)
                    p Title:
                    p.titlem=`${listMovies[index].title}`
                    p Image:
                    img.filmsimg1(src=`${listMovies[index].image}`)
                    p Year:
                    p.year= `${listMovies[index].year}`
                    p Director : 
                    p.directorm=`${listMovies[index].director}`
                    p Genre : 
                    p.genre= `${listMovies[index].genre}`
                    p Runtime : 
                    p.runtime= `${listMovies[index].runtime}`
        script(src='/js/main.js')
