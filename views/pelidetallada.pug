doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    
  body
    
    div#result1
      article.filmsa1 
      
        div(class="results1", id=`${results1.pelicula.Title}`)
          p.title #{results1.pelicula.Title}
          img.filmsimg(src=`${results1.pelicula.Poster}`, alt="movie.img")
          p Year:
          p.year #{results1.pelicula.Year}
          p Plot: 
          p.imdbId #{results1.pelicula.Plot}
          p Director : 
          p.Type #{results1.pelicula.Director}
           p Genre:
          p.year #{results1.pelicula.Genre}
          p Duration: 
          p.imdbId #{results1.pelicula.Runtime}
          p Actors:
          p.year #{results1.pelicula.Actors}
          p Rating : 
          p.Type #{results1.pelicula.imdbRating}
          each value, index in results1.comentarios
            p.title=`${results1.comentarios[index].titulo}`
            p.title=`${results1.comentarios[index].innerUserOfReview}`
            p.title=`${results1.comentarios[index].innerTextOfReview}`
           
          button(class="favoritos",id=`${results1.pelicula.Title}`)="agregar favoritos"
    script(src='/js/main.js')   